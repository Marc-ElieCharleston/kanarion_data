  "cast_time_system": {
    "description": "Cast time mechanics for monster skills - allows player interruption with CC",
    "cast_time_categories": {
      "instant": {
        "cast_time": 0,
        "interruptible": false,
        "description": "Instant cast - cannot be interrupted"
      },
      "short": {
        "cast_time_range": [0.5, 1.5],
        "interruptible": true,
        "telegraph_visual": "brief_glow",
        "description": "Short cast - basic spells, can be interrupted"
      },
      "medium": {
        "cast_time_range": [2.5, 3.5],
        "interruptible": true,
        "telegraph_visual": "channeling_aura",
        "description": "Medium cast - powerful spells, clear interrupt window"
      },
      "long": {
        "cast_time_range": [4.0, 5.0],
        "interruptible": true,
        "telegraph_visual": "charging_effect",
        "description": "Long cast - ultimate abilities, must be interrupted or devastating"
      }
    },
    "interrupt_mechanics": {
      "stun": "Interrupts cast, prevents casting for stun duration",
      "silence": "Prevents casting, interrupts current cast",
      "disarm": "Interrupts physical skills only",
      "knockback": "Interrupts cast",
      "knockdown": "Interrupts cast",
      "fear": "Interrupts cast",
      "on_interrupt": "Skill goes on cooldown (50% CD if interrupted)"
    }
  },

