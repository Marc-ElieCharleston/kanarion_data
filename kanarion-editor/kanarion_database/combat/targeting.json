      "auto_attack": {
        "needs_los": true,
        "description": "Auto-attacks bloquees si la cible a quelqu'un devant dans sa colonne"
      },
      "spells": {
        "default": false,
        "description": "Par defaut les spells ignorent LoS (needs_los sur le spell pour forcer)"
      }
    }
  },

