{
  "_meta": {
    "version": "3.0",
    "last_updated": "2026-01-10",
    "description": "Systeme social - amis, guildes, chat"
  },

  "friends": {
    "enabled": true,
    "max_friends": 100,
    "features": ["online_status", "location", "whisper_shortcut", "party_invite"]
  },

  "block_ignore": {
    "enabled": true,
    "max_blocked": 200,
    "effects": ["no_whisper", "no_trade", "no_party_invite", "hidden_in_chat"]
  },

  "guild": {
    "enabled": true,
    "max_members": 100,
    "creation_cost": 50000,
    "min_level_to_create": 20,
    "ranks": ["leader", "officer", "member", "recruit"],
    "features": ["guild_chat", "guild_storage", "guild_buffs"]
  },

  "party": {
    "max_size": 10,
    "leader_controls_movement": true,
    "follow_distance": 40,
    "loot_modes": ["random", "round_robin", "leader_distributes", "free_for_all"],
    "default_loot_mode": "random"
  },

  "chat": {
    "channels": {
      "world": {"prefix": "[W]", "color": "#E6E6D9"},
      "say": {"prefix": "[S]", "color": "#FFFFFF"},
      "party": {"prefix": "[P]", "color": "#66B3FF"},
      "guild": {"prefix": "[G]", "color": "#66E666"},
      "whisper": {"prefix": "[MP]", "color": "#E680E6"},
      "sale": {"prefix": "[V]", "color": "#FF9933"},
      "lfg": {"prefix": "[LFG]", "color": "#E6E666"},
      "combat": {"prefix": "[C]", "color": "#FF9980"}
    },
    "settings": {
      "max_messages_per_channel": 100,
      "bubble_duration_seconds": 3.0
    }
  }
}
